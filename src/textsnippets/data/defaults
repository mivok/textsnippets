# vim: ft=desktop tw=0
[general]
# Hotkey to use
# Default is super+space (super is the windows key)
hotkey=space
modifiers=super

## Time to wait before starting to type
# If you find that you are missing the beginning of snippets, then increase
# this a little.
delay = 0.1

[appearance]
font=FreeSans
size=24
validcolor=#007700
invalidcolor=black

[snippets]
quit=snippet:quit
quitdesc=Exit textsnippets

reload=snippet:reload
reloaddesc=Reload the configuration file

test=testing
testdesc=Test snippet
